# üîê FlowForge Environment Configuration

# ======================
# Backend Configuration
# ======================

# Server Settings
PORT=3001
NODE_ENV=development

# ======================
# AI & LLM Configuration
# ======================

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1500

# ======================
# Knowledge Base Configuration
# ======================

# Firecrawl API Configuration
FIRECRAWL_API_KEY=your-firecrawl-api-key-here

# ======================
# Database Configuration
# ======================

# SQLite Database Path
DATABASE_PATH=./data/flowforge.db

# Supabase Configuration (Optional)
SUPABASE_URL=your-supabase-url-here
SUPABASE_ANON_KEY=your-supabase-anon-key-here

# ======================
# Security Configuration
# ======================

# JWT Secret for authentication (when implemented)
JWT_SECRET=your-super-secret-jwt-key-here

# API Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ======================
# Development Configuration
# ======================

# Enable debug logging
DEBUG=true

# CORS Origins (comma separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000

# ======================
# External Services
# ======================

# Email Service (when implemented)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# ======================
# Performance Configuration
# ======================

# Maximum workflow execution time (ms)
MAX_EXECUTION_TIME=300000

# Maximum nodes per workflow
MAX_NODES_PER_WORKFLOW=100

# Maximum concurrent executions
MAX_CONCURRENT_EXECUTIONS=10
